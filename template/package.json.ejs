{
  "name": "<%= name %>",
  "version": "0.0.0",
  "description": "Created by create-n",
  "main": "index.js",
  "scripts": {
    "test": "ava",
    "coverage": "nyc npm run test && nyc report --reporter=html && nyc report --reporter=lcov > coverage.lcov",
    "release:beta": "npm run coverage && standard-version --prerelease beta && npm publish --tag beta && git push --follow-tags",
    "release": "npm run coverage && standard-version && npm publish && git push --follow-tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://<%= hostname %>/<%= username %>/<%= repoName %>.git"
  },
  "author": "<%= username %> <<%= userEmail %>>",
  "license": "MIT",
  "bugs": {
    "url": "https://<%= hostname %>/<%= username %>/<%= repoName %>/issues"
  },
  "homepage": "https://<%= hostname %>/<%= username %>/<%= repoName %>#readme",
  "lint-staged": {
    "**/**.{js,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
