{
  "name": "<%= name %>",
  "version": "0.0.0",
  "description": "Created by create-n",
  "keywords": [
    "<%= name %>",
    "<%= repoName %>",
    "<%= username %>"
  ],
  "main": "lib/index.js",
  "browser": "es/index.js",
  "types": "lib/index.d.js",
  "scripts": {
    "build": "tsc && tsc -p tsconfig-browser.json",
    "test": "jest",
    "coverage": "jest --collect-coverage",
    "release:beta": "npm run test && npm run build && standard-version --prerelease beta && npm publish --tag beta --access=public && git push --follow-tags",
    "release": "npm run test && npm run build && standard-version && npm publish --access=public && git push --follow-tags",
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable"
  },
  "repository": {
    "type": "git",
    "url": "git+https://<%= hostname %>/<%= username %>/<%= repoName %>.git"
  },
  "author": "<%= username %> <<%= userEmail %>>",
  "license": "<% if (license === 'gpl') { %>GPL-3.0-or-later<% } else { %>MIT<% } %>",
  "bugs": {
    "url": "https://<%= hostname %>/<%= username %>/<%= repoName %>/issues"
  },
  "homepage": "https://<%= hostname %>/<%= username %>/<%= repoName %>#readme",
  "lint-staged": {
    "*.{js,ts,css,less,json,md,html,yml,yaml,pcss,jsx,tsx}": [
      "prettier --write"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "preset": "ts-jest",
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.test.ts?(x)"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/__tests__/**/*.ts"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
