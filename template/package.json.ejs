{
  "name": "<%= name %>",
  "version": "0.0.0",
  "description": "Created by create-n",
  "keywords": [
    "<%= name %>",
    "<%= repoName %>",
    "<%= username %>"
  ],
  "main": "lib/index.js",
  "browser": "es/index.js",
  "types": "lib/index.d.js",
  "scripts": {
    "build": "tsc && tsc -p tsconfig-browser.json",
    "test": "jest",
    "coverage": "jest --collect-coverage",
    "release:beta": "npm run test && npm run build && standard-version --prerelease beta && npm publish --tag beta --access=public && git push --follow-tags",
    "release": "npm run test && npm run build && standard-version && npm publish --access=public && git push --follow-tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://<%= hostname %>/<%= username %>/<%= repoName %>.git"
  },
  "author": "<%= username %> <<%= userEmail %>>",
  "license": "MIT",
  "bugs": {
    "url": "https://<%= hostname %>/<%= username %>/<%= repoName %>/issues"
  },
  "homepage": "https://<%= hostname %>/<%= username %>/<%= repoName %>#readme",
  "lint-staged": {
    "*.{js,ts,css,less,json,md,html,yml,yaml,pcss,jsx,tsx}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "preset": "ts-jest",
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.test.ts?(x)"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/__tests__/**/*.ts"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "quoteProps": "as-needed",
    "jsxSingleQuote": false,
    "trailingComma": "all",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "arrowParens": "always",
    "proseWrap": "always",
    "htmlWhitespaceSensitivity": "css",
    "endOfLine": "lf",
    "overrides": [
      {
        "files": "*.{css,less,json,html,yml,yaml,pcss}",
        "options": {
          "singleQuote": false
        }
      }
    ]
  }
}
