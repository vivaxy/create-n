{
  "name": "create-n",
  "version": "1.0.0",
  "description": "Create Npm Package",
  "keywords": [
    "vivaxy",
    "create-n"
  ],
  "bin": {
    "create-n": "./index.js"
  },
  "scripts": {
    "test": "jest",
    "coverage": "jest --collect-coverage",
    "release:beta": "npm test && standard-version --prerelease beta && npm publish --tag beta && git push --tags",
    "release": "npm test && standard-version && npm publish && git push --tags",
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vivaxy/create-n.git"
  },
  "author": "vivaxy <xyxuye2007@126.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vivaxy/create-n/issues"
  },
  "homepage": "https://github.com/vivaxy/create-n#readme",
  "dependencies": {
    "@vivaxy/git": "^4.0.0",
    "ejs": "^3.0.0",
    "execa": "^5.0.0",
    "fast-glob": "^3.1.1",
    "fs-extra": "^9.0.0",
    "git-url-parse": "^11.1.2",
    "log-symbols": "^4.0.0",
    "prompts": "^2.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.0.0",
    "@commitlint/config-conventional": "^12.0.0",
    "husky": "6",
    "jest": "^26.0.0",
    "lint-staged": "^10.0.0",
    "pinst": "^2.1.4",
    "prettier": "^2.2.1",
    "standard-version": "^9.0.0"
  },
  "lint-staged": {
    "*.{js,ts,css,less,json,md,html,yml,yaml,pcss,jsx,tsx}": [
      "prettier --write"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "lib/**/*.js",
      "index.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/template/src",
      "/lib/template/__tests__/working-directories/",
      "/__tests__/fixtures/"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "quoteProps": "as-needed",
    "jsxSingleQuote": false,
    "trailingComma": "all",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "arrowParens": "always",
    "proseWrap": "always",
    "htmlWhitespaceSensitivity": "css",
    "endOfLine": "lf",
    "overrides": [
      {
        "files": "*.{css,less,json,html,yml,yaml,pcss}",
        "options": {
          "singleQuote": false
        }
      }
    ]
  }
}
